<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MusicPlayerActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="186dp"
        android:layout_height="95dp"
        android:src="@drawable/naada_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="103dp"
        android:layout_marginLeft="104dp"


        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="305dp"
        android:layout_height="305dp"
        android:background="@drawable/player"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:lineHeight="24sp"
            android:lineSpacingExtra="12sp"
            android:text="372k"

            android:textColor="#9babcb"
            android:textSize="12sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#9babcb"
            android:lineSpacingExtra="10sp"
            tools:text="Listening now"
            android:fontFamily="@font/poppins"
            android:lineHeight="24sp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:fontFamily="@font/poppins_semibold"
            android:lineHeight="22sp"
            android:lineSpacingExtra="10sp"
            android:text="4.8"
            android:textColor="#9babcb"
            android:textSize="12sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="22sp"
            android:lineSpacingExtra="10sp"
            android:text="Rating"
            android:textColor="#9babcb"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/details"
        android:layout_below="@+id/row1"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#666884"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            tools:text="The Neutral Dreams"
            android:fontFamily="@font/poppins_semibold"
            android:lineHeight="26sp"
            />
        <TextView
            android:id="@+id/other_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#9babcb"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:text="Ocean Trix"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="26sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#9babcb"
            android:lineSpacingExtra="16sp"
            android:text="Other details here"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:lineHeight="26sp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >
        <ImageButton
            android:layout_marginRight="25dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_insert_comment_black_24dp">

        </ImageButton>
        <ImageButton
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_pause">

        </ImageButton>
        <ImageButton
            android:id="@+id/share"
            android:layout_marginLeft="25dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_share_">

        </ImageButton>


    </LinearLayout>
</RelativeLayout>