<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act">


    <ImageButton
        android:layout_width="20dp"
        android:layout_height="16dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="159dp"
        android:background="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/my_Genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="#eb2429"
        android:textSize="14sp"
        android:text="SIGN UP"
        app:fontFamily="@font/poppins_semibold"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="186dp"
        android:layout_height="95dp"
        android:src="@drawable/naada_logo"
        android:layout_below="@id/my_Genre"
        android:layout_marginTop="30dp"
        android:layout_marginRight="103dp"
        android:layout_marginLeft="104dp"


        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"

        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Name"
        android:inputType="textEmailAddress"

        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="31dp"

        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/email"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password"
        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"/>

    <EditText
        android:id="@+id/con_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/pass"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Confirm password"
        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_pass"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundbutton2"
        android:fontFamily="@font/poppins"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="14sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/next"
    android:layout_marginTop="12dp"
    android:layout_centerHorizontal="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#60809d"

        android:layout_below="@id/next"
        android:textSize="12sp"
        android:lineHeight="22sp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Login"
        android:textColor="#eb2429"
        android:layout_below="@id/next"
        android:textSize="12sp"
        android:lineHeight="22sp"
        android:fontFamily="@font/poppins"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>


</RelativeLayout>