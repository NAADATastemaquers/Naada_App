<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vi">


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="186dp"
        android:layout_height="95dp"
        android:src="@drawable/naada_logo"

        android:layout_marginTop="30dp"
        android:layout_marginRight="103dp"
        android:layout_marginLeft="104dp"


        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="150dp"

        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/email"
        android:layout_marginTop="31dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password"
        android:singleLine="false"
        android:textColor="#eb2429"
        android:textColorHighlight="#eb2429"
        android:textColorHint="#b7cadb"
        android:textColorLink="#b7cadb"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="33dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundbutton2"
        android:fontFamily="@font/poppins"
        android:text="Log in"
        android:textColor="#ffffff"
        android:textSize="14sp" />
    <LinearLayout
        android:id="@+id/sigup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/next"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?  "
            android:textColor="#60809d"

            android:layout_below="@id/next"
            android:textSize="12sp"
            android:lineHeight="22sp"
            android:fontFamily="@font/poppins"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:textColor="#eb2429"
            android:layout_below="@id/next"
            android:textSize="12sp"
            android:lineHeight="22sp"
            android:fontFamily="@font/poppins"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>
    <Button
        android:id="@+id/pressplay"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sigup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/poppins"
        android:text="Press Play"
        android:textColor="#eb2429"
        android:layout_centerHorizontal="true"

        android:textAllCaps="false"

        android:textSize="16sp" />


</RelativeLayout>