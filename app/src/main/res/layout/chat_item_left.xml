<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/profile_image"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/background_left"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:padding="15dp"
        android:paddingEnd="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Hello"
        android:textColor="@color/chatTextColor_left"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textMessage"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:fontFamily="@font/poppins_medium"
        android:text="00:00"
        android:textColor="@color/chatTextColor_left"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/other_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textMessage"
        android:layout_alignLeft="@+id/textMessage"
        android:layout_alignBottom="@+id/textMessage"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Name"
        android:textColor="@color/chatTextColor_left"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textMessage"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/other_name"
        android:layout_toRightOf="@+id/other_name"
        android:fontFamily="@font/poppins_medium"
        android:text="."
        android:textColor="@color/chatTextColor_left"
        android:textSize="10sp" />

</RelativeLayout>